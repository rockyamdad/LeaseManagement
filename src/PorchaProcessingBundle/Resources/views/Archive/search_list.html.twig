{% extends "@PorchaProcessing/layout.html.twig" %}

{% block title %}{{ 'Archived Khatian Search'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Search'|trans }} {{ 'Khatians'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">{{ 'Archived Khatian Search'|trans }}</li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="archive-search-page">
        <div class="col-sm-12">
            {% include 'flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'Archived Khatian Search'|trans }}</span>
                    </div>
                </div>
                <div class="portlet-body">

                    <form id="form-search" class="form-horizontal" role="form" method="post" action="">
                        <div class="form-body">

                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Copy Type'|trans }}</label>
                                        <div class="col-md-8">
                                            <select class="form-control select2 input-medium mo-survey-type" id="surveyType" name="ff[s.type]" placeholder="{{ 'Select'|trans }}" >
                                                <option value=""></option>
                                                {% for survey in surveys %}
                                                    <option value="{{ survey.type }}">{{ survey.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'District'|trans }}</label>
                                        <div class="col-md-8">
                                            <select class="form-control select2 mo-district input-medium" name="ff[v.district]" placeholder="{{ 'Select'|trans }}" >
                                                <option value=""></option>
                                                {% for district in districts %}
                                                    <option value="{{ district.id }}">{{ district.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Current Upozila'|trans }}</label>
                                        <div class="col-md-8">
                                            <input type="hidden" id="upozilaId" name="ff[v.upozila]" class="form-control mo-upozila input-medium" placeholder="{{ 'Select'|trans }}"  />
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Mouza'|trans }}</label>
                                        <div class="col-md-8">
                                            <input type="hidden" id="mouzaId" name="ff[k.mouza]" class="form-control mo-mouza input-medium" placeholder="{{ 'Select'|trans }}"  />
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <!--/span-->
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Khatian No'|trans }}</label>
                                        <div class="col-md-8">
                                            <input type="text" name="ss[k.khatianNo]" placeholder="" class="form-control input-medium" >
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-5">
                                    <div class="col-md-4">
                                        <select class="form-control select2 input-small mo-survey-type" name="sf" >
                                            <option value="otsDokholkar">{{ 'otro_sotter_dokholkar'|trans }}</option>
                                            <option value="upsDokholkar">{{ 'uopristho_sotter_dokholkar'|trans }}</option>
                                        </select>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" name="sv" placeholder="" class="form-control input-large" >
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'dag_nombor'|trans }}</label>
                                        <div class="col-md-8">
                                            <input type="text" name="ss[kp.dagNong]" placeholder="" class="form-control input-medium" >
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="control-label col-md-4"></label>
                                        <div class="col-md-8">
                                            <button type="submit" id="btn-search" class="btn green" data-url="{{ search_url }}">{{ 'Search'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                        </div>
                    </form>
                    <hr/>

                    <div class='table-data'>
                        {% include 'PorchaProcessingBundle:Archive:search_list_sub.html.twig' %}
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/porchaprocessing/js/mouza-option.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/porchaprocessing/js/khatian.js') }}" type="text/javascript"></script>
{% endblock %}

{% block document_ready %}
    {{ parent() }}
    MouzaOption.init({'multipleMouza': false});
{% endblock %}
