<div class="pagination-panel">

    {% if pageCount > 1 %}
        <ul class="pagination">

        {% if previous is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><<&nbsp;{{ 'Previous'|trans }}</a>
            </li>
        {% else %}
            <li class="disabled">
                <span><<&nbsp;{{ 'Previous'|trans }}</span>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
            <li class="disabled">
                <span>&hellip;</span>
            </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page|numberBanglaConvert }}</a>
                </li>
            {% else %}
                <li class="active" data-current-url="{{ path(route, query|merge({(pageParameterName): current})) }}">
                    <span>{{ page|numberBanglaConvert }}</span>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="disabled">
                        <span>&hellip;</span>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ (pageCount -1)|numberBanglaConvert }}</a>
                    </li>
                {% endif %}
            {% endif %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount|numberBanglaConvert }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'Next'|trans }}&nbsp;>></a>
            </li>
        {% else %}
            <li class="disabled">
                <span>{{ 'Next'|trans }}&nbsp;>></span>
            </li>
        {% endif %}

        </ul>

    {% endif %}

    <div class="form-inline">
        <div class="form-group">
            <input type="hidden" id="current-page-url" value="{{ path(route, query|merge({(pageParameterName): 1})) }}" />
            <div class="input-group">
                <span class="input-group-addon">
                    {{ 'Total Record Count'|trans ~ ' : ' ~ totalCount|numberBanglaConvert }} | {{ 'per page record count'|trans }}:
                </span>
                <select class="form-control input-xsmall per-page" >
                    <option value="">{{ 'Select'|trans }}</option>
                    {% for i in 1..5 %}
                        <option {{ (numItemsPerPage == i*25) ? 'selected' : '' }} value="{{ (i*25) }}">{{ (i*25)|numberBanglaConvert }}</option>
                    {% endfor %}
                </select>
                <span class="input-group-addon">
                    {{ 'page change'|trans }}:
                </span>
                <select class="form-control input-xsmall move-to-page">
                    {% for i in 1..pageCount %}
                        <option {{ (current == i) ? 'selected' : '' }} value="{{ path(route, query|merge({(pageParameterName): i})) }}">{{ i|numberBanglaConvert }}</option>
                    {% endfor %}
                </select>
            </div>
            <!-- /input-group -->
        </div>
    </div>
</div>
