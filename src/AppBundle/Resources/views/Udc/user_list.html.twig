{% extends "RbsUserBundle::layout.html.twig" %}

{% block title %}{{ 'Users'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Users'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active"> {{ 'Users'|trans }}</li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="udc-user-list-page">
        <div class="col-sm-12">
            {% include 'flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'List of User'|trans }}</span>
                    </div>

                </div>
                <div class="portlet-body">
                    <form id="form-search" class="form-horizontal" role="form" method="post" action="" style="display: none">
                        <div class="form-body">

                            <div class="row">

                                <!--/span-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">

                                            <select class="form-control select2 mo-district" name="ff[o.upozila]" placeholder="{{ 'Upozila'|trans }}">
                                                <option value=""></option>
                                                {% for upozila in upozilas %}
                                                    <option value="{{ upozila.id }}">{{ upozila.name }}</option>
                                                {% endfor %}
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="col-md-12">
                                                <input type="text" id="userName" name="ss[u.username]" class="form-control" placeholder="{{ 'Udc User'|trans }}" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">

                                            <select class="form-control select2 mo-district" name="ff[u.enabled]" id="active" placeholder="{{ 'Status'|trans }}">
                                                <option value=""></option>
                                                <option value="1">{{ 'Active'|trans }}</option>
                                                <option value="0">{{ 'Inactive'|trans }}</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <button class="btn green" id="btn-search" data-url="{{ (search_url is defined) ? search_url : '' }}" type="button">{{ 'Search'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">


                                <!--/span-->
                            </div>

                        </div>
                    </form>

                    <div class="clearfix">
                        <div class="btn-set pull-right">
                            <a class="btn custom-btn-xs yellow" id="search-expand" href="javascript:;">
                                {{ 'Search'|trans }} <i class="fa fa-search"></i>
                            </a>
                        </div>
                    </div>
                 <form class="form-horizontal" id="form-multi-action-udc-user" role="form" method="post" action="">
                    <div class='table-data'>
                        {% include "AppBundle:Udc:user_list_content.html.twig" %}
                    </div>
                    <div class="form-body">

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <select class="form-control select2 input-medium" name="selectedChk" id="selectedChk" placeholder="{{ 'Select'|trans }}" >
                                            <option value=""></option>
                                            <option value="1">{{ 'Active User'|trans }}</option>
                                            <option value="0">{{ 'Inactive User'|trans }}</option>
                                        </select>
                                    </div>
                                    <input type="hidden" name="_token" value="{{ csrf_token("udc_user_move_action") }}" />
                                    <div class="col-md-6">
                                        <button type="submit" id="btn-form-multi-action-udc-user" class="btn green">{{ 'Status'|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="ajaxAssignRoleNessUser" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="{{ asset('assets/layout3/img/loading-spinner-grey.gif') }}" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/udc.js') }}" type="text/javascript"></script>
{% endblock %}