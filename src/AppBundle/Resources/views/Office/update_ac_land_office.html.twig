{% extends "metronic.html.twig" %}

{% block title %}{{ office.id ? 'Update'|trans : 'New'|trans }} {{ 'AC Land Office'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ office.id ? 'Update'|trans : 'New'|trans }} {{ 'AC Land Office'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="">{{ 'Offices'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ 'New'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="office-update-page">

        <form class="form-horizontal" id="form-update-office" role="form" method="post" action="{{ form_action }}">

            <div class="col-md-8">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ office.id ? 'Update'|trans : 'New'|trans }} {{ 'AC Land Office'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">

                        <div class="form-body">

                            <div class="form-group {% if form_errors(form.name) is not empty %}has-error{% endif %}">
                                <label class="col-md-3 control-label">
                                    {{ 'Name'|trans }} <span class="required" aria-required="true"> * </span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name) }}
                                    <span class="help-block">{{ form_errors(form.name) }}</span>
                                </div>
                            </div>
                            <div class="form-group {% if form_errors(form.parent) is not empty %}has-error{% endif %}">
                                <label class="col-md-3 control-label">
                                    {{ 'DC Office'|trans }} <span class="required" aria-required="true"> * </span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.parent) }}
                                    <span class="help-block">{{ form_errors(form.parent) }}</span>
                                </div>
                            </div>
                            <div class="form-group {% if form_errors(form.upozila) is not empty %}has-error{% endif %}">
                                <label class="col-md-3 control-label">
                                    {{ 'Upozila'|trans }}
                                    <span class="required" aria-required="true"> * </span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.upozila) }}
                                    <span class="help-block">{{ form_errors(form.upozila) }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    {{ 'Contact Person'|trans }}
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.contactPerson) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    {{ 'Contact Info'|trans }}
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.contactInfo) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    {{ 'Record Room In Charge Info'|trans }}
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.recordRoomInChargeInfo) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-9">
                                    <div class="radio-list">
                                        <label>
                                            {{ form_widget(form.active, {'label': 'Active'}) }}
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn default" href="#" onclick="window.history.go(-1); return false;">{{ 'Cancel'|trans }}</a>
                                    <button type="submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>
        </form>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/office.js') }}" type="text/javascript"></script>
{% endblock %}