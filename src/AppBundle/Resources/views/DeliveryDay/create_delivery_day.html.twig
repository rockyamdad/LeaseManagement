{% extends "metronic.html.twig" %}

{% block title %}{{ deliveryday.id ? 'Update'|trans : 'New'|trans }} {{ 'Delivery day'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ deliveryday.id ? 'Update'|trans : 'New'|trans }} {{ 'Delivery day'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('deliveryday_list') }}">{{ 'Delivery day'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ deliveryday.id ? 'Update'|trans : 'New'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="deliveryday-update-page">

        <form class="form-horizontal" id="form-update-deliveryday" role="form" method="post" action="{{ form_action }}">

            <div class="col-md-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ deliveryday.id ? 'Update'|trans : 'New'|trans }} {{ 'Delivery day'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">

                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 control-label">{{ 'Application type'|trans }}</label>
                                <div class="col-md-5 col-sm-5">
                                    {{ form_widget(form.applicationType) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group survy_type">
                                <label class="col-md-3 control-label">{{ 'Survey Name'|trans }}</label>
                                <div class="col-md-5">
                                    {{ form_widget(form.survey) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="holiday weekly">
                                <div class="form-group">
                                    <label class="col-md-3 control-label extra-margin extra-top-margin">{{ 'Normal Delivery Day'|trans }}</label>

                                    <div class="col-md-2">
                                        <span class="help-block app_type">{{ 'Has Entry'|trans }}</span>
                                        {{ form_widget(form.normalDeliveryHasEntry) }}
                                    </div>
                                    <div class="col-md-2 app_type">
                                        <span class="help-block">{{ 'Not Entry'|trans }}</span>
                                        {{ form_widget(form.normalDeliveryNotEntry) }}
                                    </div>
                                    <div class="col-md-2 app_type">
                                        <span class="help-block">{{ 'Non Deliverable'|trans }}</span>
                                        {{ form_widget(form.normalDeliveryNonDeliverable) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label extra-margin extra-top-margin">{{ 'Emergency Delivery Day'|trans }}</label>

                                    <div class="col-md-2">
                                        <span class="help-block app_type">{{ 'Has Entry'|trans }}</span>
                                        {{ form_widget(form.emergencyDeliveryHasEntry) }}
                                    </div>
                                    <div class="col-md-2 app_type">
                                        <span class="help-block">{{ 'Not Entry'|trans }}</span>
                                        {{ form_widget(form.emergencyDeliveryNotEntry) }}
                                    </div>
                                    <div class="col-md-2 app_type">
                                        <span class="help-block">{{ 'Non Deliverable'|trans }}</span>
                                        {{ form_widget(form.emergencyDeliveryNonDeliverable) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Status'|trans }}</label>
                                <div class="col-md-5">
                                    {{ form_widget(form.active) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        {%  if current_user_office.type|upper == 'MINISTRY'%}
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-5">
                                    {{ form_widget(form.locked) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        {% endif %}
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn default" href="{{ path('deliveryday_list') }}">{{ 'Cancel'|trans }}</a>
                                    <button type="submit" id="delivery_day_submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        </form>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/office.js') }}" type="text/javascript"></script>
{% endblock %}