{% extends "metronic.html.twig" %}

{#{% block title %}{{ district.id ? 'Update'|trans : 'Add'|trans }} District | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Update'|trans }} {{ 'District'|trans }}</h1>{% endblock %}#}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            {{ 'Office setting'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="dc_office_setting">

        <div class="col-md-12 col-sm-12">
            {% include 'flash.html.twig' %}
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'Office setting'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" id="form-settings-update" role="form" method="post" action="{{ form_action }}">
                        <div class="form-body">
                                <div class="fieldset_body row">
                                    <h5 class="theme-font bold">{{ 'Office Information'|trans }}</h5>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-5 control-label">{{ 'Total Union Count'|trans }}</label>
                                            <div class="col-md-7">
                                                {{ form_widget(form.unionCount) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-5 control-label">{{ 'Total Mouza Count'|trans }}</label>
                                            <div class="col-md-7">
                                                {{ form_widget(form.mouzaCount) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-5 control-label">{{ 'Total Khatian Count'|trans }}</label>
                                            <div class="col-md-7">
                                                {{ form_widget(form.totalRecordCount) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-5 control-label">{{ 'Office postal address'|trans }}</label>
                                            <div class="col-md-7">
                                                {{ form_widget(form.officePostalAddress) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-5 control-label">{{ 'work distribution'|trans }}</label>
                                            <div class="col-md-7">
                                                {{ form_widget(form.workflowTeam) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <hr>
                                <div class="fieldset_body row">
                                    <h5 class="theme-font bold">{{ 'Application Information'|trans }}</h5>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'Inside of Postal Fee'|trans ~ ' (' ~ 'Tk'|trans ~ ')' }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.postFeeInDistrict) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'Outside of Postal Fee'|trans ~ ' (' ~ 'Tk'|trans ~ ')' }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.postFeeOutDistrict) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'Limit the application of the applicant (the same day)'|trans }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.applicationLimitADay) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">{{ 'Application receive media'|trans }}</label>
                                                <div class="col-md-8">
                                                    {{ form_widget(form.applicationReceiveMedia) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <hr>
                                <div class="fieldset_body row">
                                    <h5 class="theme-font bold">{{ 'UDC Information'|trans }}</h5>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'UDC delivery fee'|trans ~ ' (' ~ 'Tk'|trans ~ ')' }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.uiscDeliveryFee) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'UDC application receive fee'|trans ~ ' (' ~ 'Tk'|trans ~ ')' }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.uiscApplicationReceiveFee) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-8 control-label">{{ 'UDC delivery day (additional)'|trans }}</label>
                                            <div class="col-md-4">
                                                {{ form_widget(form.uiscDeliveryDay) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-4 col-md-8">
                                    <button type="submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/settings.js') }}" type="text/javascript"></script>
{% endblock %}

