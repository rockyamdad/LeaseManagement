{% extends "metronic.html.twig" %}

{% block title %}{{ 'work distribution'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'work distribution'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ 'group'|trans }} {{ (workflow_team) ? 'Edit'|trans : 'Create'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">

        <div class="col-md-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">
                            {{ (type=='app') ? 'Application based'|trans : 'Batch based'|trans }} {{ 'group'|trans }}
                            {{ (workflow_team) ? 'Edit'|trans : 'Create'|trans }}
                        </span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" id="workflow-team" role="form" method="post" action="{{ form_action }}" novalidate>
                        <div class="form-body">

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group {{ form_errors(form.name) != '' ? 'has-error' : '' }}">
                                        <label class="control-label col-md-4 required">{{ 'group'|trans }} {{ 'Name'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.name) }}
                                            <span class="help-block">{{ form_errors(form.name) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Survey'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.surveys, {'attr': {'placeholder': 'Select'|trans}}) }}
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Upozila'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.upozilas, {'attr': {'placeholder': 'Select'|trans}}) }}
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">{{ 'Mouza'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.mouzas, {'attr': {'placeholder': 'Select'|trans}}) }}
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group {{ form_errors(form.entryOperators) != '' ? 'has-error' : '' }}">
                                        <label class="control-label col-md-4 required">{{ 'Entry Operator'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.entryOperators, {'attr': {'placeholder': 'Select'|trans}}) }}
                                            <span class="help-block">{{ form_errors(form.entryOperators) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group {{ form_errors(form.verifiers) != '' ? 'has-error' : '' }}">
                                        <label class="control-label col-md-4 required">{{ 'Verifier'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.verifiers, {'attr': {'placeholder': 'Select'|trans}}) }}
                                            <span class="help-block">{{ form_errors(form.verifiers) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-4">
                                    <div class="form-group {{ form_errors(form.comparers) != '' ? 'has-error' : '' }}">
                                        <label class="control-label col-md-4 required">{{ 'Comparer'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.comparers, {'attr': {'placeholder': 'Select'|trans}}) }}
                                            <span class="help-block">{{ form_errors(form.comparers) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group {{ form_errors(form.approvers) != '' ? 'has-error' : '' }}">
                                        <label class="control-label col-md-4 required">{{ 'Approver'|trans }}</label>
                                        <div class="col-md-8">
                                            {{ form_widget(form.approvers, {'attr': {'placeholder': 'Select'|trans}}) }}
                                            <span class="help-block">{{ form_errors(form.approvers) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" id="team-submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}


{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/porchaprocessing/js/workflow_team.js') }}" type="text/javascript"></script>
{% endblock %}
