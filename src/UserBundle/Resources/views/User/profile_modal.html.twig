<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">{{ "User Profile"|trans }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <h3>{{ "User Profile Information"|trans }}</h3>
            <table class="table table-bordered">
                <tr>
                    <td>{{ 'Full name en'|trans }}</td>
                    <td>{{ user.profile.fullNameEn }}</td>
                </tr>
                <tr>
                    <td>{{ 'Full name bn'|trans }}</td>
                    <td>{{ user.profile.fullNameBn }}</td>
                </tr>
                <tr>
                    <td>{{ 'Nid'|trans }}</td>
                    <td>{{ user.profile.nid }}</td>
                </tr>
                <tr>
                    <td>{{ 'Designation'|trans }}</td>
                    <td>{{ user.profile.designation }}</td>
                </tr>
                <tr>
                    <td>{{ 'Gender'|trans }}</td>
                    <td>{{ user.profile.gender }}</td>
                </tr>
                <tr>
                    <td>{{ 'Cellphone'|trans }}</td>
                    <td>{{ user.profile.cellphone }}</td>
                </tr>
                <tr>
                    <td>{{ 'Photo'|trans }}</td>
                    <td><img src="{{ asset(user.profile.signature) }}" width="110" height="50"></td>
                </tr>
                <tr>
                    <td>{{ 'Gender'|trans }}</td>
                    <td>{{ user.profile.gender }}</td>
                </tr>
                <tr>
                    <td>{{ 'Cellphone'|trans }}</td>
                    <td>{{ user.profile.cellphone }}</td>
                </tr>
            </table>

            <h3>{{ "User Login Information"|trans }}</h3>
            <table class="table table-bordered">
                <tr>
                    <td>{{ 'Username'|trans }}</td>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <td>{{ 'Email'|trans }}</td>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <td>{{ 'Role'|trans }}</td>
                    <td>{{ user.groups[0].name }}</td>
                </tr>

            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn default" data-dismiss="modal">{{ "Close"|trans }}</button>
</div>