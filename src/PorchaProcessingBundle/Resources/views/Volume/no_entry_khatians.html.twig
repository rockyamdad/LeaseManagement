{% extends "modal.html.twig" %}

{% block modal_title %}
    {{ 'No Entry'|trans }} {{ 'khatians'|trans }}
{% endblock %}

{% block modal_content %}
    {% set i = 1 %}
    {% for key,mouza in mouzas %}
        {{ key }}:
        {% for khatianNo in mouza %}
            {{ khatianNo|numberBanglaConvert }}
            {% if mouza|length != i %}, {% endif %}
            {% set i = i + 1 %}
        {% endfor %}
        <br/>
        <br/>
    {% endfor %}
{% endblock %}