{% extends "metronic.html.twig" %}

{% block title %}{{ district.id ? 'Update'|trans : 'Add'|trans }} {{ 'District'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ district.id ? 'Update'|trans : 'Add'|trans }} {{ 'District'|trans }} | {{ parent() }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('district_list') }}">{{ 'Districts'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ district.id ? 'Update'|trans : 'New'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="app-settings-update-page">

        <div class="col-md-8 col-sm-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ district.id ? 'Update'|trans : 'Add'|trans }} {{ 'District'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" id="form-settings-update" role="form" method="post" action="{{ form_action }}">
                        <div class="form-body">

                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'District'|trans }} {{ 'Name'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Geocode'|trans }} {{ 'No.'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.geocode) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Division'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.division) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-9">
                                    <div class="radio-list">
                                        <label>
                                            {{ form_widget(form.approved) }}
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn default" href="{{ path('app_district_list') }}">{{ 'Cancel'|trans }}</a>
                                    <button type="submit" class="btn green">{{ 'Submit'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'Import'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" role="form" method="post">
                        <div class="form-group">
                            <div class="col-md-9">
                                <input type="file" id="exampleInputFile1">
                                <p class="help-block"> {{ 'Import CSV file'|trans }} </p>
                            </div>
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-9">
                                    <button type="submit" class="btn green">{{ 'Submit'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/settings.js') }}" type="text/javascript"></script>
{% endblock %}

