{% extends "metronic.html.twig" %}

{% block title %}{{ holiday.id ? 'Update'|trans : 'New'|trans }} {{ 'Holiday'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ holiday.id ? 'Update'|trans : 'New'|trans }} {{ 'Holiday'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('holiday_list') }}">{{ 'Holiday'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ 'New'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="holiday-update-page">

        <form class="form-horizontal" id="form-create-holiday" role="form" method="post" action="{{ form_action }}">

            <div class="col-md-12">
                {% include 'flash.html.twig' %}
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ holiday.id ? 'Update'|trans : 'New'|trans }} {{ 'Holiday'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">

                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Type of Holiday'|trans }}</label>
                                <div class="col-md-5">
                                    {{ form_widget(form.type) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="holiday weekly">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">{{ 'Year Select'|trans }}</label>
                                    <div class="col-md-5">
                                        {{ form_widget(form.year) }}
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-8">
                                            {{ form_widget(form.day) }}
                                        <span id="form_2_services_error"></span>
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="holiday govt">
                                <div class="form-group ">
                                    <label class="col-md-3 control-label">
                                        {{ 'Name of Holiday'|trans }}
                                    </label>
                                    <div class="col-md-9">
                                        {{ form_widget(form.title) }}
                                        <span class="help-block">{{ form_errors(form.title) }}</span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-md-3 control-label">
                                        {{ 'Holiday start date'|trans }}
                                    </label>
                                    <div class="col-md-3">
                                        {{ form_widget(form.startDate) }}
                                    </div>
                                    <label class="col-md-2 control-label">
                                        {{ 'Holiday end date'|trans }}
                                    </label>
                                    <div class="col-md-3">
                                        {{ form_widget(form.endDate) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn default" href="{{ path('holiday_list') }}">{{ 'Cancel'|trans }}</a>
                                    <button type="submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        </form>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/rajax.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.css') }}">
    <script src="{{ asset('bundles/app/js/jquery-ui.js') }}"></script>
    <script src="{{ asset('bundles/app/js/office.js') }}" type="text/javascript"></script>
{% endblock %}