{% extends "metronic.html.twig" %}

{% block title %}{{ smssetting.id ? 'Update'|trans : 'New'|trans }} {{ 'SMS Setting'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ smssetting.id ? 'Update'|trans : 'New'|trans }} {{ 'SMS Setting'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('sms_setting_list') }}">{{ 'SMS Setting'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ smssetting.id ? 'Update'|trans : 'New'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="smssetting-update-page">

        <form class="form-horizontal" id="form-update-smssetting" role="form" method="post" action="{{ form_action }}">

            <div class="col-md-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ smssetting.id ? 'Update'|trans : 'New'|trans }} {{ 'SMS Setting'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">

                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 control-label">{{ 'Application type'|trans }}</label>
                                <div class="col-md-5 col-sm-5">
                                    {{ form_widget(form.applicationType) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 control-label extra-top-margin">{{ 'Message'|trans }}</label>

                                <div class="col-md-3 col-sm-4">
                                    <span class="help-block">{{ 'New Application'|trans }}</span>
                                    {{ form_widget(form.newApplicationMessage) }}
                                </div>
                                <div class="col-md-3 col-sm-4">
                                    <span class="help-block">{{ 'Delivery Date Change'|trans }}</span>
                                    {{ form_widget(form.deliveryChangeMessage) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 control-label">{{ 'Status'|trans }}</label>
                                <div class="col-md-5 col-sm-5">
                                    {{ form_widget(form.active) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            {%  if current_user_office.type|upper == 'MINISTRY'%}
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-5">
                                        {{ form_widget(form.locked) }}
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <a class="btn default" href="{{ path('sms_setting_list') }}">{{ 'Cancel'|trans }}</a>
                                    <button type="submit" id="court_fee_submit" class="btn green">{{ 'Save'|trans }}</button>
                                </div>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        </form>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/office.js') }}" type="text/javascript"></script>
{% endblock %}