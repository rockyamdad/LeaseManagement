{% extends "@PorchaProcessing/layout.html.twig" %}

{% block title %}{{ 'Register View'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1 xmlns="http://www.w3.org/1999/html">{{ 'Register View'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ 'Register View'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-add-page">

        <div class="col-md-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'Register View'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                        <form class="form-horizontal">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'Demand Fee'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.applications.totalAmount }}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'chalanNo'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.chalanNo }}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'chalanDate'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.chalanDate|date("m/d/Y") }}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'chalanAmount'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.chalanAmount }}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'nothiNo'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.nothiNo }}</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'bank'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.bank }}</p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{ 'branch'|trans }} :</label>
                                    <div class="col-md-9">
                                        <p class="margin-top-10">{{ leaseAssign.branch }}</p>
                                    </div>
                                </div>

                                {% if leaseAssignDocs %}
                                    <div class="col-md-12">
                                        <form class="form-horizontal">
                                            <h4 class="caption-subject font-blue-sharp bold uppercase">{{ 'Register'|trans }} {{ 'Document'|trans }} {{ 'List'|trans }} :</h4>
                                            <div class="form-group">

                                                {#<label class="col-md-2 control-label">{{ 'Document'|trans }} :</label>#}
                                                {% for leaseAssignDoc in leaseAssignDocs %}

                                                    <div class="col-md-9 col-md-offset-2">
                                                        {{ loop.index }} <a href="{{ asset('uploads') }}/{{ leaseAssignDoc.type }}">{% if leaseAssignDoc.type is not null  %}{{ leaseAssignDoc.type }} {% else %} {{ leaseAssignDoc.path }}{% endif %}</a>
                                                    </div>
                                                {% endfor %}

                                            </div>
                                        </form>
                                    </div>
                                {% endif %}
                                <a class="btn purple btn-sm col-md-offset-2" href="javascript: window.history.go(-1)">{{ 'Back'|trans }}</a>
                                {#{% if (leaseAssign.status == 'WAITING_FOR_APPROVAL') and (is_granted('ROLE_LEASE_ASSIGN_APPROVED')) %}#}
                                    {#<a href="{{ path('lease_assign_status_change', {'id': leaseAssign.id, 'status': 'WAITING_FOR_APPROVAL'}) }}" class="btn blue btn-sm"  title="{{ 'Approved'|trans }}">#}
                                        {#{{ 'APPROVED'|trans }}#}
                                    {#</a>#}
                                    {#<a href="{{ path('lease_assign_status_change', {'id': leaseAssign.id, 'status': 'CORRECTION'}) }}" class="btn green btn-sm "  title="{{ 'Correction'|trans }}">#}
                                        {#{{ 'Correction'|trans }}#}
                                    {#</a>#}
                                {#{% elseif (leaseAssign.status == 'APPROVED') and  (is_granted('ROLE_LEASE_ASSIGN_TERMINATED'))  %}#}
                                    {#<a href="{{ path('lease_assign_status_change', {'id': leaseAssign.id, 'status': 'Approved'}) }}" class="btn red btn-sm"  title="{{ 'CANCELED'|trans }}">#}
                                        {#{{ 'CANCELED'|trans }}#}
                                    {#</a>#}
                                {#{% endif %}#}

                            </div>
                        </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <!-- END PAGE CONTENT INNER -->
{% endblock %}



