{% extends "metronic.html.twig" %}

{% block title %}{{ 'Thana'|trans }} {{ mode == 'edit' ? 'Edit'|trans : 'Create'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Thana'|trans }} {{ 'Edit'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li>
            <a href="{{ path('thana_list') }}">{{ 'Thana'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ mode == 'edit' ? 'Edit'|trans : 'Create'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">

        <div class="col-md-8 col-sm-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'Thana'|trans }} {{ mode == 'edit' ? 'Edit'|trans : 'Add'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" id="thana-create-form" role="form" method="post" action="{{ form_action }}">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Thana'|trans }} {{ 'Name'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Thana'|trans }} {{ 'Geocode'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.geocode) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'District'|trans }}</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.district) }}
                                </div>
                            </div>

                            {% if form.approved is defined %}
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <div class="radio-list">
                                            <label>
                                                {{ form_widget(form.approved) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if (mode == 'edit') %}
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <div class="radio-list">
                                            <label>
                                                {{ form_widget(form.deleted) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        {{ form_row(form._token) }}
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">{{ 'Submit'|trans }}</button>
                                    <a class="btn default" href="{{ path('mouza_list') }}">{{ 'Cancel'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/porchaprocessing/js/thana.js') }}" type="text/javascript"></script>
{% endblock %}

{% block document_ready %}
    {{ parent() }}
    Thana.init();
{% endblock %}