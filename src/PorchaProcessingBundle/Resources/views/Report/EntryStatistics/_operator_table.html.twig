<div class="portlet-title">
    <div class="caption">
        {% if is_granted('ROLE_KHATIAN_ENTRY') %}
        {{ 'Entry Statistics'|trans }}
        {% elseif is_granted('ROLE_KHATIAN_VERIFICATION') %}
            {{ 'Verification Statistics'|trans }}
        {% elseif is_granted('ROLE_KHATIAN_COMPARISON') %}
            {{ 'Comparison Statistics'|trans }}
        {% endif %}
    </div>
</div>
<div class="portlet-body">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th rowspan="2">{{ "Survey"|trans }}</th>
            <th colspan="2">{{ "Today"|trans }} ({{ today|date("Y-m-d") }})</th>
            <th colspan="2">{{ "Yesterday"|trans }} ({{ today|date_modify('-1 day')|date("Y-m-d") }})</th>
            <th colspan="2">{{ "Total till today"|trans }}</th>
        </tr>
        <tr>
            <th>{{ "Khatian Count"|trans }}</th>
            <th>{{ "Correction Required"|trans }}</th>
            <th>{{ "Khatian Count"|trans }}</th>
            <th>{{ "Correction Required"|trans }}</th>
            <th>{{ "Khatian Count"|trans }}</th>
            <th>{{ "Correction Required"|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for type, row in data %}
            <tr>
                <td>{{ type|trans }}</td>
                <td>{{ row.values.today.complete|numberBanglaConvert }}</td>
                <td>{{ row.values.today.correction|numberBanglaConvert }}</td>
                <td>{{ row.values.yesterday.complete|numberBanglaConvert }}</td>
                <td>{{ row.values.yesterday.correction|numberBanglaConvert }}</td>
                <td>{{ row.values.total.complete|numberBanglaConvert }}</td>
                <td>{{ row.values.total.correction|numberBanglaConvert }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>