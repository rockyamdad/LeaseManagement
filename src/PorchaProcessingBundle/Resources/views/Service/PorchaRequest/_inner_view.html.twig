<div class="portlet-title">
    <div class="caption caption-md title-text-center">
        <i class="icon-bar-chart theme-font hide"></i>
        <span class="caption-subject theme-font bold uppercase">{{ "Details of Request Khatian"|trans }}</span>
    </div>
</div>
<div class="portlet-body khatian-list">
    <table class="table">
        <thead>
        <tr>
            <th>{{ "Survey"|trans }}</th>
            <th>{{ "District"|trans }}</th>
            <th>{{ "Upozila"|trans }}</th>
            <th>{{ "Mouza"|trans }}</th>
            <th width="100">{{ "Jlno"|trans }}</th>
            {% if row.khatianNo is not empty  %}
                <th width="100">{{ "Khatian No"|trans }}</th>
            {% endif %}
            {% if row.dagNo is not empty  %}
                <th width="100">{{ "Sheet No"|trans }}</th>
                <th width="100">{{ "Dager Number"|trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody id="khatian-list">
        <tr>
            <td>{{ row.survey }}</td>
            <td>{{ row.district }}</td>
            <td>{{ row.upozila }}</td>
            <td>{{ row.mouza }}</td>
            <td>{{ row.jlNo|numberBanglaConvert }}</td>
            {% if row.khatianNo is not empty %}
                <td>{{ row.khatianNo|numberBanglaConvert }}</td>
            {% endif %}

            {% if row.dagNo is not empty %}
                <td>{{ row.sheetNo|numberBanglaConvert }}</td>
                <td>{{ row.dagNo|numberBanglaConvert }}</td>
            {% endif %}
        </tr>
        </tbody>
    </table>
</div>