{% extends "metronic.html.twig" %}

{% block title %}{{ 'Khatian Search'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Khatian Search'|trans }}</h1>{% endblock %}

{% block body %}
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">{{ 'Dashboard'|trans }}</a><i class="fa fa-circle"></i>
        </li>
        <li class="active">
            {{ 'Khatian Search'|trans }}
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="khatian-search-page">

        <div class="col-md-12">
            <div class="portlet light">

                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">{{ 'ARCHIVED'|trans ~ ' ' ~ 'Khatian'|trans }}</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <form class="form-horizontal" id="form-search" role="form" method="post" action="">
                        <div class="form-body">
                            <div class="block-group">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'Copy Type'|trans }}</label>
                                            <div class="col-md-8">
                                                <select class="form-control select2 input-medium mo-survey-type" id="surveyType" name="ff[s.type]" placeholder="{{ 'Select'|trans }}" >
                                                    <option value=""></option>
                                                    {% for survey in surveys %}
                                                        <option value="{{ survey.type }}">{{ survey.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'District'|trans }}</label>
                                            <div class="col-md-8">
                                                <select class="form-control select2 mo-district input-medium" name="ff[v.district]" placeholder="{{ 'Select'|trans }}" >
                                                    {% for district in districts %}
                                                        <option value="{{ district.id }}">{{ district.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'Current Upozila'|trans }}</label>
                                            <div class="col-md-8">
                                                <input type="hidden" id="upozilaId" name="ff[v.upozila]" class="form-control mo-upozila input-medium" placeholder="{{ 'Select'|trans }}"  />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'Mouza'|trans }}</label>
                                            <div class="col-md-8">
                                                <input type="hidden" id="mouzaId" name="ff[k.mouza]" class="form-control mo-mouza input-medium" placeholder="{{ 'Select'|trans }}"  />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'Khatian No'|trans }}</label>
                                            <div class="col-md-8">
                                                <input type="text" name="ss[k.khatianNo]" placeholder="" class="form-control input-medium bn-digit" >
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="col-md-4">
                                            <select class="form-control select2 input-small mo-survey-type" name="sf" >
                                                <option value="otsDokholkar">{{ 'otro_sotter_dokholkar'|trans }}</option>
                                                <option value="otsDokholkar">{{ 'maliker nam'|trans }}</option>
                                                <option value="upsDokholkar">{{ 'uopristho_sotter_dokholkar'|trans }}</option>
                                            </select>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" name="sv" placeholder="" class="form-control input-large" >
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'dag_nombor'|trans }}</label>
                                            <div class="col-md-8">
                                                <input type="text" name="ss[kp.dagNong]" placeholder="" class="form-control input-medium" >
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'Restricted'|trans }} {{ 'Khatian'|trans }}</label>
                                            <div class="col-md-8">
                                                <select class="form-control select2 input-small" placeholder="{{ 'Select'|trans }}" name="ff[k.displayRestricted]" >
                                                    <option value=""></option>
                                                    <option value="1">{{ 'Yes'|trans }}</option>
                                                    <option value="0">{{ 'No'|trans }}</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">{{ 'archived date'|trans }}</label>
                                            <div class="col-md-8">
                                                <input type="text" name="rff1[k.archivedAt]" placeholder="{{ 'from'|trans }}" style="float: left" class="form-control date-picker bn2en input-small" data-date-format="dd-mm-yyyy" > <input type="text" name="rff2[k.archivedAt]" placeholder="{{ 'to'|trans }}" class="form-control date-picker bn2en input-small" data-date-format="dd-mm-yyyy">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-4"></label>
                                            <div class="col-md-8">
                                                <button type="submit" id="btn-search" class="btn green" data-url="{{ search_url }}">{{ 'Search'|trans }}</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                        </div>
                    </form>

                    <form class="form-horizontal" id="form-multi-action" role="form" method="post" action="">
                        <div class='table-data'>
                            {% include 'PorchaProcessingBundle:Archive:khatian_search_sub.html.twig' %}
                        </div>

                        {% if is_granted('ROLE_MARK_KHATIAN_AS_NON_DELIVERABLE') %}
                        <div class="form-body">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <select class="form-control select2 input-medium" name="multiAction" id="multiAction" placeholder="{{ 'Select'|trans }}" >
                                                <option value=""></option>
                                                <option value="VIEWABLE">{{ 'Khatians'|trans ~ ' ' ~ 'Viewable'|trans }}</option>
                                                <option value="NON_VIEWABLE">{{ 'Khatians'|trans ~ ' ' ~ 'Non Viewable'|trans }}</option>
                                                <option value="CORRECTION_REQUIRED">{{ 'Khatians'|trans ~ ' ' ~ 'Correction Required'|trans }}</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5" id="entryOperators" style="display: none">
                                            <label class="control-label col-md-4">সংশোধনকারী </label>
                                            {% if entryOperators is defined %}
                                                <select class="form-control select2 input-large" name="entryOperator">
                                                {% for eo in entryOperators %}
                                                    <option value="{{ eo.id }}">{{ eo.nameWithUsername }}</option>
                                                {% endfor %}
                                                </select>
                                            {% endif %}
                                        </div>
                                        <div class="col-md-2">
                                            <input type="hidden" name="_token" value="{{ csrf_token("archived_khatian_action") }}" />
                                            <button type="submit" id="btn-form-multi-action" class="btn green">{{ 'do'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        {% endif %}

                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}

{% block include_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/porchaprocessing/js/mouza-option.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/porchaprocessing/js/archive.js') }}" type="text/javascript"></script>
{% endblock %}

{% block document_ready %}
    {{ parent() }}
    MouzaOption.init({'multipleMouza': false});

{% endblock %}

