<div class="portlet light">
    <div class="portlet-title">
        <div class="caption caption-md">
            <i class="icon-bar-chart theme-font hide"></i>
            <span class="caption-subject theme-font bold uppercase">{{ 'Annual Leave'|trans }}
                ({{ holidayoverview.searchYear }} {{ 'Year'|trans }})</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'Week Leave'|trans }}</label>

            <div class="col-md-5 col-sm-5">
                {{ holidayoverview.weekLeave }}
            </div>
        </div>
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'Govt Leave'|trans }}</label>

            <div class="col-md-5 col-sm-5">

                <a id="hovLeave" data-toggle="modal" data-target="#ajax"
                   href="{{ path('holiday_list_by_type', {'year':  holidayoverview.searchYear, 'type': 'GOV_LEAVE'}) }}">
                    {{ holidayoverview.govLeave }} </a>
            </div>
        </div>
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'CEO Leave'|trans }}</label>

            <div class="col-md-5 col-sm-5">
                <a id="hovLeave" data-toggle="modal" data-target="#ajax"
                   href="{{ path('holiday_list_by_type', {'year':  holidayoverview.searchYear, 'type': 'CEO_LEAVE'}) }}">
                    {{ holidayoverview.ceoLeave }}
                </a>
            </div>
        </div>
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'Working Day'|trans }}</label>

            <div class="col-md-5 col-sm-5">
                {{ holidayoverview.workingDay }}
            </div>
        </div>
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'Total Leave'|trans }}</label>

            <div class="col-md-5 col-sm-5">
                {{ holidayoverview.totalLeave }}
            </div>
        </div>
        <div class="row">
            <label class="col-md-5 col-sm-5 control-label">{{ 'Total Day'|trans }}</label>

            <div class="col-md-5 col-sm-5">
                {{ holidayoverview.totalDay }}
            </div>
        </div>

    </div>
</div>
